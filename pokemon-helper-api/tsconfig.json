{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "lib": ["ESNext"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}